<% layout("./layouts/boilerplate.ejs") %>

<div class="row mt-5 mb-5">
    <div class="col-8 col-lg-5 col-md-6 offset-2 offset-lg-3">
        <h3 class="mb-3">Sign Up on GharExpress</h3>
        <form 
            action="/signup" 
            method="post" 
            novalidate 
            class="needs-validation"
            >
            <div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                    name="username"
                    id="username" 
                    type="text" 
                    placeholder="John Doe" 
                    class="form-control"
                    required
                    >
                    <div class="valid-feedback">Username looks good!</div>
                    <div class="invalid-feedback">Username should be valid!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input 
                    name="email"
                    id="email" 
                    type="email" 
                    placeholder="example@gmail.com" 
                    class="form-control"
                    required
                    >
                    <div class="valid-feedback">Email looks good!</div>
                    <div class="invalid-feedback">Email should be valid!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                    name="password"
                    id="password" 
                    type="password" 
                    placeholder="••••••••"
                    class="form-control"
                    required
                    >
                    <div class="valid-feedback">Password looks good!</div>
                    <div class="invalid-feedback">Password should be valid!</div>
                </div>
                <button class="btn btn-success"> SignUp </button>
            </div>  
        </form>
        <p class="small mt-3">already registered <a href="/login">login</a></p>
    </div> 
</div>   