<% layout("./layouts/boilerplate") %>

<!-- Render form to create new listing -->
<div class="row mt-3 mb-5">
    <div class="col-8 offset-2">
        <form 
            action="/listings" 
            method="post" 
            novalidate 
            class="needs-validation"
            enctype="multipart/form-data" 
            >
            <fieldset>
                <h3>Create New Listing</h3>
                <div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input 
                        name="listing[title]" 
                        id="title"
                        type="text" 
                        placeholder="Add a Catchy title" 
                        class="form-control"
                        required
                        >
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Title should be valid!</div>
                    </div>
                        
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea 
                        name="listing[description]" 
                        id="description"
                        class="form-control"
                        placeholder="Enter Description"
                        required
                        ></textarea>
                        <div class="valid-feedback">Description looks good!</div>
                        <div class="invalid-feedback">Enter a short description!</div>
                            
                    </div>
                        
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input 
                        name="listing[image]" 
                        id="image"
                        type="file" 
                        class="form-control"
                        required
                        >                            
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input 
                            name="listing[price]"  
                            id="price"                                
                            placeholder="12000" 
                            class="form-control"
                            required
                            >
                            <div class="valid-feedback">Price looks good!</div>
                            <div class="invalid-feedback">Price should be valid!</div>
                                
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input 
                            name="listing[country]" 
                            id="country"
                            type="text" 
                            placeholder="India" 
                            class="form-control"
                            required
                            >
                            <div class="valid-feedback">Country name looks good!</div>
                            <div class="invalid-feedback">Country name should be valid!</div>
                                
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input 
                        name="listing[location]" 
                        id="location"
                        type="text" 
                        placeholder="Jaipur, Raipur..."
                        class="form-control"
                        required
                        >
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Location should be valid!</div>
                    </div>
                    <button class="btn btn-dark btn-color"> Add </button>
                </div>
            </fieldset>
        </form>
    </div>
</div>