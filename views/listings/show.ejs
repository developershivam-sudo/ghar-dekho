<% layout("./layouts/boilerplate") %> <!-- Use boilerplate layout -->

<div class="row mt-3 mb-5">
    <div class="col-10 offset-1 mb-3">
        <div class="card listing-card col-md-8 col-lg-6 offset-lg-1 offset-md-1 show-card px-lg-3">
            <h3><%= listing.title %></h3> <!-- Listing title -->
            <img 
                src="<%= listing.image.url %>" 
                class="card-img-top show-img img-fluid mt-2" 
                alt="listing_image"
                style="width: 100%; height: auto; object-fit: contain;"
                />
            <div class="card-body mt-1">
                <p class="card-text"><i>Owned by <b><%= listing.owner.username %></b></i></p>
                <p class="card-text"><%= listing.description %></p>
                <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / month</p>
                <p class="card-text"><%= listing.location %></p>
                <p class="card-text"><%= listing.country %></p>
            </div>
        </div>
        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
            <div class="btns px-lg-3">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark btn-color col-lg-1 col-2 offset-1">Edit</a>
                <!-- Edit button -->
                <form method="post" action="/listings/<%= listing.id %>?_method=DELETE">
                    <button class="btn btn-dark offset-3">Delete</button> <!-- Delete button -->
                </form>
            </div>
        <% } %>
    </div>
    
    <!-- review section -->
    
    <div class="col-8 offset-1 offset-md-2 mt-3">
        <% if(currentUser) { %>
            <hr>
            <h3>Leave a Review:</h3>
            <form 
                action="/listings/<%= listing.id %>/reviews" 
                method="post" 
                novalidate 
                class="needs-validation"
                >
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input 
                            type="radio" 
                            id="no-rate" 
                            class="input-no-rate" 
                            name="review[rating]" 
                            value="1" 
                            checked aria-label="No rating." 
                        />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div 
                    class="mb-3 mt-3"
                    >
                    <label 
                        for="comment" 
                        class="form-label"
                        >Comment</label>
                    <textarea 
                        name="review[comment]" 
                        id="comment" 
                        class="form-control"
                        rows="5"
                        placeholder="Leave a comment here..." 
                        required
                        ></textarea>
                    <div 
                        class="invalid-feedback"
                        >Please write something for review..</div>
                </div>
                
                <!-- Submit review button -->
                <button class="btn btn-outline-dark mb-3">Submit</button>
            </form>
        <% } %>
        <!-- show reviews -->
        <% if (listing.reviews[0]) { %> <!-- Check if there are reviews -->
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <!-- Loop through reviews -->
                <% for(review of listing.reviews) { %>
                    <div class="card col-lg-5 col-sm-12 ms-3 mb-3">
                        <div class="card-body mt-3">
                            <h5 class="card-title">@<%= review.author.username %></h5>    <!-- Review author -->
                            <p class="card-text">
                                <%= review.comment %> <!-- Review comment -->
                            </p>
                            <p class="starability-result card-text mb-2" data-rating= <%= review.rating %>></p>
                        </div>
                        <form class="mb-3" method="post"
                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <!-- Delete review button -->
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>      
</div>